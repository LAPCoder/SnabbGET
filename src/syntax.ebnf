<bool>				::= <condition> | "true" | "false" | <bool>;
<condition>			::= (((<int> | <bool> | <string>),
						  ("==" | "!="), 
						  (<int> | <bool> | <string>)) |
						 (<int>, ("<" | "<=" | ">" | ">="), <int>) |
						 (<bool>, ("&&" | "||"), <bool>) |
						 ("!", <bool>));
<string>			::= {<char>};
<char>				::= 'a' .. 'z' | 'A' .. 'Z' | '0' .. '9' |
						'/' | '.' | '$' | '&' | ...;
<int>				::= '0' .. '9' | (<int>, ("+" | "-" | "/" | "*" | "%" | "^"), <int>);
<list<TYPE>>		::= {<TYPE>};
<TYPE>				::= <bool> | <string> | <char> | <int>;
