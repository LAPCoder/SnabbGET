@@ ::= [ <line>, @@ ], <none>

<line>				::= <command> | <for> | <if> | <while> | <var> | <list>
<command>			::= <command_name>, {[<params>]};
<command_name>		::= "cd" | "cls" | "cp" | "exe" |
						"exit" | "help" | "ls" | "mk" |
						"mv" | "say";
<params>			::= ["--" | "-"], <param_name>;
<param_name>		::= <string>;
<for>				::= "for", "[", ((<int>, <bool> (*, int++ *)) |
									 (<list<char>>, ":", "$", <string>)), "]", "do",
						{<command>, "\n"}, "end";
<if>				::= "if", "[", <bool>, "]", "then",
						{<command>, "\n"}, "end";
<while>				::= "while", "[", <bool>, "]", "do",
						{<command>, "\n"}, "end";
<var>				::= "$" + <string>, "=", (<bool> | <string> | <char> | <int>);
<list<TYPE>>		::= "#" + <string>, "=", "[", [{<TYPE>, ","}, <TYPE>], "]";

